{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": ["../shared/menus.json"],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "createUpdaterArtifacts": false
  },
  "productName": "Aria",
  "mainBinaryName": "Aria",
  "identifier": "com.aria-player.aria",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU4RDEwOTBDQzNBOUZEODUKUldTRi9hbkREQW5SV09sTmdaZGFrY0I2RFpDS3U2ZlFPeHkrQXJ0WGxsNy9Oeks2Y0hJdW55VSsK",
      "endpoints": [
        "https://github.com/aria-player/aria/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "assetProtocol": {
        "scope": {
          "allow": ["$APPDATA/**"],
          "deny": [],
          "requireLiteralLeadingDot": false
        },
        "enable": true
      },
      "csp": "default-src 'self' asset: https:; media-src 'self' asset: https: blob:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' blob: https:; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "visible": false,
        "title": "Aria",
        "width": 1000,
        "height": 600,
        "minWidth": 220,
        "minHeight": 32,
        "useHttpsScheme": true
      }
    ]
  }
}
